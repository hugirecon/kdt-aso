# KDT Aso - Environment Configuration
# Copy this file to .env and fill in the values

# Required: Anthropic API key for AI agents
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Optional: ElevenLabs API key for voice synthesis
ELEVENLABS_API_KEY=

# Server configuration
PORT=3001
NODE_ENV=production

# Dashboard URL (for CORS)
DASHBOARD_URL=http://localhost:3001

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=kdt-aso-production-secret-change-me

# Compose project name
COMPOSE_PROJECT_NAME=kdt-aso

# Deployment environment
DEPLOY_ENV=production
